<Window x:Class="WPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFClient"
        mc:Ignorable="d"
        Title="Login" Height="225" Width="500">
    <Grid VerticalAlignment="Stretch" Background="#1A5BC4" >
        <Grid.RowDefinitions>
            <RowDefinition Height="65"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Login:" Margin="5, 30, 5, 5"></Label>
        <TextBox Name="LoginBox" Grid.Row="0" Grid.Column="1" Margin="7, 30, 7, 7" Background="#0A5BC4"/>
        
        <Label Grid.Row="1" Content="Password:" Margin="5"></Label>
        <PasswordBox Name="PasswordBox" Grid.Row="1" Grid.Column="1" Margin="7" PasswordChar="*" Background="#0A5BC4" />

        <Button Content="Login" Grid.Row="3" Grid.Column="2" Height="40" Margin="10" Click="Login_Click" />
        <Button Content="Exit" Grid.Row="3" Height="40" Margin="10" Click="Exit_Click" />

    </Grid>
</Window>
